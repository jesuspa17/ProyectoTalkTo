<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dam.salesianostriana.pmdm.proyectoappmessages.EnviarMensajeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enviar mensaje a"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ToritoTriana"
        android:id="@+id/txtNombreEnviar"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editMensaje"
        android:layout_below="@+id/txtNombreEnviar"
        android:layout_marginTop="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Escribe el mensaje..."/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgEnviarMensaje"
        android:layout_below="@+id/editMensaje"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_send"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user"
        android:padding="10dp"/>
</RelativeLayout>
